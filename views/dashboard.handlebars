<h1 class="mt-5 text-center">Dashboard</h1>
<div class="container container-fluid">
    {{#each postData}}
    <div class="card text-center">
        <div class="card-header">
            <p class="card-title">{{this.title}}</p>
        </div>
        <div class="card-body">
            <p class="card-text">{{this.text}}</p>
        </div>
        <div class="card-footer text-muted">
            <p class="card-text">{{this.user.username}} on {{date_formatter this.createdAt}}</p>
        </div>
        <div class="form-group">
            <label for="comment">Comment:</label>
            <textarea class="form-control" rows="5" id="comment"></textarea>
        </div>
    </div>
    {{/each}}
<h1 class="text-center">Make a new post</h1>
      <div class="container container-fluid border border-dark rounded pb-3">
        <div class="mb-3 mt-3 ">
            <label for="exampleFormControlInput1" class="form-label">Title</label>
            <input type="email" class="form-control" id="newPostTitle">
          </div>
          <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Blog Content</label>
            <textarea class="form-control" id="newPostText" rows="3"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Post</button>
      </div>
</div>
